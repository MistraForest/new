<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.getingstarted.pogba.login.LoginActivity">

    <TextView
            android:text="@string/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="20dp"
            android:id="@+id/_forest_text"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/username_id"
            android:layout_toStartOf="@+id/username_id"
            android:layout_marginTop="45dp"
            tools:ignore="RelativeOverlap"/>
    <Button
            android:text="@string/sign_in_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="135dp"
            tools:layout_editor_absoluteX="140dp" android:id="@+id/sign_in_button_id"
            android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginBottom="18dp"
            android:id="@+id/username_id"
            android:hint="@string/username_hint"
            android:layout_above="@+id/password_id" android:layout_centerHorizontal="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginBottom="24dp" android:id="@+id/password_id"
            android:layout_above="@+id/sign_in_button_id" android:layout_toRightOf="@+id/_forest_text"
            android:layout_toEndOf="@+id/_forest_text" android:hint="@string/password_hint"/>
</RelativeLayout>
