<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.a06.uebung.maus.getingstarted.pogba.myue06app.dataaccess.TodoDetail_Activity">

	<EditText
			android:id="@+id/item_detail_title"
			android:layout_width="384dp"
			android:layout_height="0dp"
			android:hint="@string/details_title"
			android:imeOptions="actionDone"
			android:singleLine="true"
			android:layout_marginTop="16dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

	<EditText
			android:id="@+id/item_description"
			android:layout_width="384dp"
			android:layout_height="90dp"
			android:gravity="start|top"
			android:hint="@string/details_description"
			android:imeOptions="actionDone"
			android:padding="5dp"
			android:textSize="12sp"
			android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/item_detail_title"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="8dp"/>

	<!-- use a selector operating on the content! -->


	<!-- a button whose activation depends on the filling of other elements -->
	<Button
			android:id="@+id/saveButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:height="30dip"
			android:text="@string/speichern"
			android:layout_marginEnd="16dp"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_chainStyle="spread_inside"
			android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/item_description"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="27dp"
			android:layout_marginRight="16dp"/>

	<Button
			android:id="@+id/deleteButton"
			android:layout_width="88dp"
			android:layout_height="wrap_content"
			android:height="30dip"
			android:text="@string/loeschen"
			app:layout_constraintEnd_toStartOf="@+id/saveButton"
			android:layout_marginEnd="24dp" android:layout_marginStart="24dp"
			app:layout_constraintStart_toEndOf="@+id/clearButton" app:layout_constraintHorizontal_bias="0.4"
			android:layout_marginTop="120dp" app:layout_constraintTop_toBottomOf="@+id/item_description"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="27dp"/>

	<Button
			android:id="@+id/clearButton"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:height="30dip"
			android:text="@string/clear"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/deleteButton"
			android:layout_marginEnd="16dp" android:layout_marginTop="120dp"
			app:layout_constraintTop_toBottomOf="@+id/item_description" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="27dp"/>

</android.support.constraint.ConstraintLayout>
