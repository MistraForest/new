<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context="com.aufgabe5.views.uebung4.pogba.uebung4_views_todo_aufgabe5.TodoDetailsActivity">

   <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:orientation="vertical" >

      <EditText
            android:id="@+id/item_name"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:hint="itemdetails_name"
            android:imeOptions="actionDone"
            android:singleLine="true" />

      <EditText
            android:id="@+id/item_description"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:gravity="start|top"
            android:hint="description"
            android:imeOptions="actionDone"
            android:padding="5dp"
            android:textSize="12sp" />

      <Switch
            android:text="@string/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/status_id"
            android:textOff="@string/no_switch" android:textOn="@string/yes_switch"/>


      <!-- use a selector operating on the content! -->

   </LinearLayout>

   <!-- a button whose activation depends on the filling of other elements -->
   <Button
         android:id="@+id/saveButton"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:height="30dip"
         android:text="Speichern" />

   <Button
         android:id="@+id/deleteButton"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@id/saveButton"
         android:height="30dip"
         android:text="LÃ¶schen" />
</RelativeLayout>
