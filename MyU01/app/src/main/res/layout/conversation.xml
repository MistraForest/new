<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.uebung.maus.getingstarted.pogba.myu01.MainActivity">

	<EditText android:id="@+id/new_message" android:layout_width="fill_parent"
	          android:layout_height="75dp"
	          android:padding="5dp" android:hint="@string/new_message_hint" android:imeOptions="actionDone" android:singleLine="true" />

	<TextView
			android:id="@+id/conversation_transcript"
			android:layout_width="fill_parent"
			android:layout_height="150dp"
			android:gravity="start|top"
			android:padding="5dp"
			android:textSize="12sp"
			android:layout_marginTop="32dp"
			app:layout_constraintTop_toBottomOf="@+id/new_message" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="254dp" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
