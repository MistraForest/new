<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.getingstarted.pogba.mygridlayaout.MainActivity" android:layout_gravity="center_vertical">

    <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gridLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <Button
                android:text="@string/button_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/left_button"
        />
        <Button
                android:text="@string/button_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/center_button"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/gridLayout"
                android:layout_toEndOf="@+id/gridLayout"/>
        <Button
                android:text="@string/button_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/right_button"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/center_button"
                android:layout_toEndOf="@+id/center_button"
                android:layout_alignBottom="@+id/bottom_button"
                android:layout_centerHorizontal="false"
                android:layout_centerInParent="false"
                android:layout_gravity="center_vertical|fill"
                android:layout_columnSpan="1"
                android:layout_rowSpan="2"
                android:layout_column="2"
                android:layout_row="0"/>
        <Button
                android:text="@string/button_bottom"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_button"
                android:layout_below="@+id/gridLayout" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" android:layout_row="1" android:layout_column="0"
                android:layout_rowSpan="1" android:layout_columnSpan="2"/>
    </GridLayout>



</RelativeLayout>
