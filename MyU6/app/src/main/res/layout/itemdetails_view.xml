<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.getingstarted.pogba.myu6.dataAccess.ItemdetailsActivity">


	<EditText
			android:id="@+id/item_title"
			android:layout_width="fill_parent"
			android:layout_height="50dip"
			android:hint="@string/itemdetails_title"
			android:imeOptions="actionDone"
			app:layout_constraintWidth_default="wrap"
			android:singleLine="true"
			app:layout_constraintHorizontal_weight="20" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="42dp" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="42dp" app:layout_constraintDimensionRatio="w,16:9"
			android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/item_description"/>

	<EditText
			android:id="@+id/item_description"
			android:layout_width="0dp"
			android:layout_height="150dip"
			android:gravity="start|top"
			android:hint="@string/itemdetails_description"
			android:imeOptions="actionDone"
			android:padding="5dp"
			android:textSize="12sp" android:layout_marginTop="42dp"
			app:layout_constraintTop_toBottomOf="@+id/item_title"
			android:layout_marginEnd="42dp" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="42dp"
			android:layout_marginBottom="84dp" app:layout_constraintBottom_toTopOf="@+id/saveButton"/>


	<Button
			android:id="@+id/saveButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:height="30dip"
			android:text="@string/speichern"
			android:layout_marginTop="84dp"
			app:layout_constraintTop_toBottomOf="@+id/item_description" android:elevation="13dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="72dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp"/>

	<Button
			android:id="@+id/deleteButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_above="@id/saveButton"
			android:height="30dip"
			android:text="@string/loeschen" android:layout_marginTop="32dp"
			app:layout_constraintTop_toBottomOf="@+id/saveButton" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="15dp" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="72dp" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="1.0" android:layout_marginStart="72dp"
			app:layout_constraintVertical_bias="0.0"/>


</android.support.constraint.ConstraintLayout>
