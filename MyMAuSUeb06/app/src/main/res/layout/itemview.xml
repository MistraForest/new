<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.getingstarted.pogba.dataaccess.dataaccess.dataAccess.ItemDetailsActivity"
		tools:layout_editor_absoluteY="81dp">


	<EditText
			android:id="@+id/item_name"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:hint="@string/itemdetails_name"
			android:imeOptions="actionDone"
			android:singleLine="true"
			app:layout_constraintEnd_toEndOf="parent"/>

	<EditText
			android:id="@+id/item_description"
			android:layout_width="0dp"
			android:layout_height="173dp"
			android:gravity="start|top"
			android:hint="@string/itemdetails_description"
			android:imeOptions="actionDone"
			android:padding="5dp"
			android:textSize="12sp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/item_name"/>


	<!-- a button whose activation depends on the filling of other elements -->
	<Button
			android:id="@+id/saveButton"
			android:layout_width="0dp"
			android:layout_alignParentBottom="true"
			android:height="30dip"
			android:text="@string/speichern"

			android:layout_marginTop="36dp"
			app:layout_constraintTop_toBottomOf="@+id/deleteButton"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_height="48dp"/>

	<Button
			android:id="@+id/deleteButton"
			android:layout_width="0dp"
			android:layout_height="48dp"
			android:layout_above="@id/saveButton"
			android:height="30dip"
			android:text="@string/loeschen"
			android:layout_marginTop="88dp"
			app:layout_constraintTop_toBottomOf="@+id/item_description" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
	/>

</android.support.constraint.ConstraintLayout>
